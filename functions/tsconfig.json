{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs", 
    "strict": true, 
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "*"] 
    },
    "outDir": "./dist", 
    "rootDir": "./src" 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"] 
}
